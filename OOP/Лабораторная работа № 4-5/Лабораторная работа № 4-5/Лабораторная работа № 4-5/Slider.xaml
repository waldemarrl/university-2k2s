<UserControl x:Class="Лабораторная_работа___4_5.Slider"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Лабораторная_работа___4_5"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="150">
    <Grid>
        <TextBox x:Name="tb_fst" TextWrapping="Wrap" Text="{Binding Text, Mode=TwoWay}" 
            VerticalAlignment="Center" Height="30" FontSize="18"
            Background="LightGray" Margin="5,0,91,0" Width="54"/>
        <TextBox x:Name="tb_snd" TextWrapping="Wrap" Text="{Binding Text, Mode=TwoWay}" 
            VerticalAlignment="Center" Height="30" FontSize="18"
            Background="LightGray" Margin="91,0,5,0" Width="54"/>
        <Label x:Name="rangeLabel" Content="—" VerticalAlignment="Center" 
               HorizontalAlignment="Center"/>
    </Grid>
</UserControl>